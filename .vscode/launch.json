{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // this config bypasses waiting for debugger attachment, increasing speed
        {
            "name": "Quick Launch",
            "type": "node-terminal",
            "request": "launch",
            "command": "cargo run --features dev",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug",
            "program": "${workspaceFolder}/target/debug/${workspaceFolderBasename}",
            "args": [],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": ["rust"],
            "cargo": {
                "args": [
                    "build",
                    "--bin=tile_game",
                    "--package=tile_game",
                    "--features",
                    "dev_mode",
                ],
                "filter": {
                    "name": "tile_game",
                    "kind": "bin"
                }
            },
            "env": {
                "CARGO_MANIFEST_DIR": "${workspaceFolder}",
            },
            "linux": {
                "program": "${workspaceFolder}/target/debug/tile_game",
                "env": {
                    "CARGO_MANIFEST_DIR": "${workspaceFolder}",
                    "LD_LIBRARY_PATH": "${env:LD_LIBRARY_PATH}:${workspaceFolder}/target/debug:${workspaceFolder}/target/debug/deps:${env:HOME}/.rustup/toolchains/nightly-x86_64-unknown-linux-gnu/lib:${env:HOME}/.rustup/toolchains/nightly-x86_64-unknown-linux-gnu/lib/rustlib/x86_64-unknown-linux-gnu/lib:${env:HOME}/.rustup/toolchains/stable-x86_64-unknown-linux-gnu/lib:${env:HOME}/.rustup/toolchains/stable-x86_64-unknown-linux-gnu/lib/rustlib/x86_64-unknown-linux-gnu/lib"
                }
            },
            "windows": {
                "program": "${workspaceFolder}/target/debug/tile_game.exe",
                "env": {
                    "CARGO_MANIFEST_DIR": "${workspaceFolder}",
                    "PATH": "${env:PATH};${workspaceFolder}/target/debug/deps;${env:USERPROFILE}\\.rustup\\toolchains\\stable-x86_64-pc-windows-msvc\\lib\\rustlib\\x86_64-pc-windows-msvc\\lib" // for windows
                }
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'tile_game'",
            "program": "${workspaceFolder}/target/debug/${workspaceFolderBasename}",
            "args": [],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": ["rust"],
            "cargo": {
                "args": [
                    "build",
                    "--bin=tile_game",
                    "--package=tile_game",
                    "--features",
                    "dev_mode",
                ],
                "filter": {
                    "name": "tile_game",
                    "kind": "bin"
                }
            },
            "env": {
                "CARGO_MANIFEST_DIR": "${workspaceFolder}",
                "PATH": "${workspaceFolder}/target/debug/deps;${env:USERPROFILE}\\.rustup\\toolchains\\stable-x86_64-pc-windows-msvc\\lib\\rustlib\\x86_64-pc-windows-msvc\\lib;${env:PATH}" // for windows
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests",
            "program": "${workspaceFolder}/target/debug/${workspaceFolderBasename}",
            "args": ["--test"],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": ["rust"],
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=tile_game",
                    "--package=tile_game",
                ],
                "filter": {
                    "name": "tile_game",
                    "kind": "bin"
                }
            },
            "env": {
                "CARGO_MANIFEST_DIR": "${workspaceFolder}",
                "LD_LIBRARY_PATH": "${env:LD_LIBRARY_PATH}:${workspaceFolder}/target/debug:${env:HOME}/.rustup/toolchains/nightly-x86_64-unknown-linux-gnu/lib:${env:HOME}/.rustup/toolchains/stable-x86_64-unknown-linux-gnu/lib"
            }
        }
    ]
}
